      //- end main-subnav

      //- main content
      .content
        h1 Welcome to our community, Beyonce!
        span.assume May we call you Beyonce? Let us know.   
        form.pure-form.pure-form-stacked
          fieldset
            legend Below are some other questions that will help us get to know you better:
            .pure-g-r
              .pure-u-1-3
                label(for='first-name') First Name
                input#first-name(type='text', required='required')
              .pure-u-1-3
                label(for='last-name') Last Name
                input#last-name(type='text', required='required')
              .pure-u-1-3
                label(for='email') E-Mail
                input#email(type='email', required='required', placeholder="required")
              .pure-u-1-3
                label(for='username') Prefered flambé username
                input#username(type='text', required='required')
            label.pure-checkbox(for='terms')
              input#terms(type='checkbox')
              span.agree I've read the 
                a(href="/legal") terms and conditions
            button.pure-button.pure-button-primary(type='submit') Submit
      //- end main-content

      //- gallery-nav
      .gallery-nav
        a.pure-button.push-right(href="#")
          i.icon-arrow-left.pull-left
          span.label-left Chill

        a.pure-button(href="#")
          span.label-right Warm
          i.icon-arrow-right.pull-right 
      //- end gallery-nav

      //- sub-content
      .sub-content
        .pure-g-r
          .pure-u-1-3
            p Ads via Some Ad Network TBD
          .pure-u-1-3
            p Work for Food Professionals
          .pure-u-1-3
            img.sub-content-logo(src="/assets/img/logo.svg")
            span.intro What's cookin' ? flambé is where food lovers share.
      //- end sub-content
    //- end content

