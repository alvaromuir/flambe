                  a.logout(href="#") 
                    i.icon-remove-sign.pull-left 
                    span.text logout
                  .clearfix    
                a(href="/profile.html")
                  img(src="assets/img/avatars/beyonce.jpg")
            li
              form.pure-form
                .input-append
                  span.add-on
                    input.pure-u-1-1(type="search", placeholder="search flambé")
