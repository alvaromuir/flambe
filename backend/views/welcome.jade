extends layout

block content
  //- content
  .container
    //- main sub-nav
    .pure-menu.pure-menu-open.pure-menu-horizontal.header
      ul
        li.active
          a(href="#") Popular
        li
          a(href="#") Everyone
        li
          a(href="#") Debuts
    //- end main-subnav
    //- main content
    .content
      h1 Welcome to our community, #{greetingName}!
      span.assume May we call you #{greetingName}? Let us know.   
      form.pure-form.pure-form-stacked
        fieldset
          legend Below are some other questions that will help us get to know you better:
          .pure-g-r
            .pure-u-1-3
              label(for='first-name') First Name
              input#first-name(type='text', required='required', value="#{greetingName}")
            .pure-u-1-3
              label(for='last-name') Last Name
              input#last-name(type='text', required='required', value="#{lastName}")
            .pure-u-1-3
              label(for='email') E-Mail
              input#email(type='email', required='required', placeholder="required")
            .pure-u-1-3
              label(for='username') Prefered flamb√© username
              input#username(type='text', required='required', value="#{userName}")
          label.pure-checkbox(for='terms')
            input#terms(type='checkbox')
            span.agree I've read the 
              a(href="/legal") terms and conditions
          button.pure-button.pure-button-primary(type='submit') Submit
    //- end main-content
  //- end content